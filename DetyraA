.data
array: .space 20
jepNrAnt: .asciiz "Jep numrin e anetareve te vektorit (max. 5): "
shtypElem: .asciiz "Shtyp elementet nje nga nje: \n"
vleratEvekt: .asciiz "Vlerat e vektorit jane: \n"
endl: .asciiz "\n"

.text
    main:
    la $a0, array
    move $s0, $a0
    addi $a1, $zero, 0  #inicializimi i n-it (pra ne a1)
    
    jal popullarizoVektorin


    while: beq $t6, $t0, ex
        li $v0, 4
        la $a0, vleratEvekt
        syscall

        lw $t7, 0($s0)

        addi $t6, $t6, 4
        
        li $v0, 1
        move $a0, $t7
        syscall

        li $v0, 4
        la $a0, endl
        syscall
        
        j while
    ex:
    li $v0, 10
    syscall


popullarizoVektorin:
    addi $sp, $sp, -8  #e alokojme hapesiren ne stack per dy regjistra
    sw $a0, 0($sp)      #e ruajme adresen e array ne stack
    sw $a1, 4($sp)      #e ruajme n ne stack

    li $v0, 4
    la $a0, jepNrAnt
    syscall

    li $v0, 5       #numri i anetareve i dhene nga perdoruesi
    syscall
    
    add $v1, $zero, $v0
    sw $v1, 4($sp) #tash ktu e ruajtem n-in e dhene nga perdoruesi ne sack pointer

    li $v0, 4
    la $a0, endl
    syscall

    li $v0, 4
    la $a0, endl
    syscall

    addi $t1, $zero, 0 #counteri
    addi $t2, $zero, 0  #offseti
    
    lw $s0, 0($sp)    #po i casemi array-it dhe po e rujme ne $t3
    lw $s1, 0($sp)

    li $v0, 4
    la $a0, shtypElem
    syscall

    loop: beq $t1, $v1, endloop

        li $v0, 5           # inputi perdoruesit
        syscall

        add $s0, $s0, $t2 #ja kemi shtu offsetin adreses qe e mban array-in
        sw $v0, 0($s0) #po e rujme ne array vleren e dhene prej perdoruesit

        addi $t2, $t2, 4
        addi $t1, $t1, 1
        j loop

    endloop:
        jr $ra
        
        



        

#unazavlerave:





#unazakalimit:





